
{% if "error" is flashed %}
<div class="flash error">
    <div class="flash-text">
        {{ get_data("error") }}
    </div>
    <i class="flash-btn fas fa-times"></i>
</div>

{% elseif "success" is flashed %}
<div class="flash success">
        <div class="flash-text">
            {{ get_data("success") }}
        </div>
        <i class="flash-btn fas fa-times"></i>
    </div>
    
{% elseif "info" is flashed %}
<div class="flash info">
        <div class="flash-text">
            {{ get_data("info") }}
        </div>
        <i class="flash-btn fas fa-times"></i>
</div>

{% endif %}