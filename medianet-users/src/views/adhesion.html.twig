{% extends "base.html.twig" %}

{% block content %}
	
	<form action = "{{ path_for('sendAdhesion') }}" method= POST >
		<div class="formular">
		<h2>Mon adhesion</h2>
			<div>
				<label for="nom">Nom</label>
				<input type="text" name="nom" placeholder="Doe" required>
			</div>
			<div>
				<label for="prenom">Prénom</label>
				<input type="text" name="prenom" placeholder="John"required>
			</div>
			<div>
				<label for="email">E-mail</label>
				<input type="text" name="email" placeholder="john.doe@example.com"required>
			</div>
			<div>
				<label for="adresse">Adresse</label>
				<input type="text" name="adresse" placeholder="10 rue Lilas 54000 Nancy" required>
			</div>
			<div>
				<label for="telephone">Téléphone</label>
				<input type="text"  pattern="\d+" name="telephone" placeholder="06 06 06 06 06" required>
			</div>
			<div>
				<label for="mdp">Mot de passe</label>
				<input type="password" name="mdp" placeholder="*******" required>
			</div>
			<div>
				<label for="mdp">Confirmer mot de passe</label>
				<input type="password" name="mdpConf" placeholder="*******" required>
			</div>
			<div>
				<input class="btn" type="submit" value="Cliquez ici pour adhérer">
			</div>
		</form>
{% endblock %}
