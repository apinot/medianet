
{% if "error" is flashed %}
<div class="flash danger">
    <p>
        {{ get_data("error") }}
    </p>
</div>
{% endif %}

{% if "success" is flashed %}
<div class="flash success">
    <p>
        {{ get_data("success") }}
    </p>  
</div>
{% endif %}

{% if "info" is flashed %}
<div class="flash info">
    <p>
        {{ get_data("info") }}
    </p>
</div>
{% endif %}