{% extends 'base.html.twig' %}

{% block content %}

    <form action="{{ path_for('verifDoc',{id:document.id}) }}" method="post">
        <div class="formular">
            <div>
                <label for="">Nom :</label>
                <input type="text" name="nom" value="{{ document.nom }}">
            </div>
            <div>
                <label for="">Resumer :</label>
                <input type="text" name="resume" value="{{ document.resume }}">
            </div>
            <div>
                <label for="">Genre :</label> 
                <input type="text" name="genre" value="{{ document.genre }}">
            </div>
            <div>
                <label for="">Disponible :</label>
                <input type="text" name="disponible" value="{{ document.disponible }}">
            </div>
            {% if document.type() == 'CD' %}
            <div>
                <label for="">Artistes: </label>
                <input type="text" name="artistes" value="{{ document.documentable.artistes }}">
            </div>
            <div>
                <label for="">Maison de disque :</label>
                <input type="text" name="maison_disque" value="{{ document.documentable.maison_disque }}">
            </div>
            {% endif %}
            {% if document.type() == 'DVD' %}
            <div>
                <label for="">Acteurs :</label>
                <input type="text" name="acteurs" value="{{ document.documentable.acteurs }}">
            </div>
            <div>
                <label for="">Dur√©e :</label>
                <input type="text" patern="\d+" name="duree"value="{{ document.documentable.duree }}">
            </div>
            {% endif %}
            {% if document.type() == 'Livre' %}
            <div>
                <label for="">Auteur :</label>
                <input type="text" name="auteur" value="{{ document.documentable.auteur }}">
            </div>
            <div>
                <label for="">Edition :</label>
                <input type="text" name="edition" value="{{ document.documentable.edition }}">
            </div>
            {% endif %}
            <div>
                <input class="btn" type="submit" value="Modifier">
            </div>
        </div>
    </form>

{% endblock %}