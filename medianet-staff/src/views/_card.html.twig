<div id="card-{{ media.id }}" class="card">
    {% if media.disponible == 0 %}
        <img class="card-img-top disabled" src="https://www.slatkine.com/80701-large_default/book-07210910.jpg"  alt="">
    {% else %}
        <img class="card-img-top" src="https://www.slatkine.com/80701-large_default/book-07210910.jpg"  alt="">
    {% endif %}
    <div class="card-body">
        <div class="card-title">
            {% if media.type() == 'CD' %}
                <i class="fas fa-music"></i>
            {% endif %}
            {% if media.type() == 'DVD' %}
                <i class="fas fa-video"></i>
            {% endif %}
            {% if media.type() == 'Livre' %}
            <i class="fas fa-book"></i>
            {% endif %}
            
            
            {{ media.nom }}
        </div>
        <hr>
        <div class="card-item">
            RÃ©f : {{ media.id }}
        </div>
        <div class="card-item">
           Genre : {{ media.genre }}
        </div> 
        <div class="card-bottom">
            {% if media.disponible == 0 %}
            <i class="fas fa-times-circle" style="color: #FF0000;"> indisponible</i>
            {% else %}
                <i class="fas fa-check-square" style="color: #4CAF50;"> disponible</i> 
            {% endif %}
            <a class="btn" href="{{ path_for('showDocument', {id: media.id}) }}">Details</a>
        </div>
    </div>
    {% if emprunt %}
        {{ emprunt.date_limite }}
    {% endif %}
</div>